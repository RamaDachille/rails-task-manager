<h1>Edit: <%= @task.title %></h1>

<%= form_with model: @task do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :details %>
  <%= form.text_field :details %>
  <%= form.label :completed %>
  <%= form.check_box :completed %>
  <%= form.submit %>
<% end %>
<br>
<%= link_to 'Back to all tasks', tasks_path %>
