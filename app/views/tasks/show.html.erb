<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<div>Status: <input type="checkbox" <%@task.completed ? "checked": ""%>></div>
<br>
<%= link_to 'Edit Task', edit_path(@task) %>
<br><br>
<%= link_to 'Delete Task', delete_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<br><br>
<%= link_to 'Back to all tasks', tasks_path %>
